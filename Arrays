export const buscarElementos = (criterio, valor, data) => {
    console.log(criterio);
    console.log(valor);
    console.log(data);

    const resultados = [];

    for (const elemento of data) {
        // Verifica si el criterio existe en el elemento y si es una cadena
        if (elemento[criterio] && typeof elemento[criterio] === 'string' &&
            elemento[criterio].toLowerCase().includes(valor.toLowerCase())) {
            resultados.push(elemento);
        }
    }

    return resultados;
};
