en base a la siguiente clase quiero una funcion para eliminar un elemento en base al id con JS

export class OdcManager{
    constructor(){
        this.elementos = []
    }
    agregarElemento(elemento){
        this.elementos.push(elemento)
    }
    eliminarElemento(){
        this.elementos = this.elementos
    }
    modificarElemento(id, factura, proveedor, equipo, cantidad, almacen, motivo, observacion, adjunto, responsable) {
        for (const elemento of this.elementos) {
            if (elemento.id == id) {
                elemento.num_pedido = factura;
                elemento.npvr = proveedor;
                elemento.idequipo = equipo;
                elemento.cantidad = cantidad;
                elemento.almacen = almacen;
                elemento.motivo = motivo;
                elemento.observaciones = observacion;
                elemento.adjunto = adjunto;
                elemento.responsable = responsable
                break;
            }
        }
    }
}
