const limiteBotones = 22;
let arreglo = [1, 2, 3, 4, 5];

// Función para crear botones
const crearBotones = () => {
  const contenedor = document.getElementById('contenedor-botones');
  contenedor.innerHTML = ''; // Limpiar el contenedor

  for (const elemento of arreglo) {
    const boton = document.createElement('button');
    boton.textContent = elemento;

    boton.addEventListener('click', () => {
      if (elemento === Math.max(...arreglo)) {
        // Incrementar cada elemento por length + 1
        arreglo = arreglo.map((valor) => valor + arreglo.length + 1);
        // Verificar que no se exceda el límite
        if (arreglo.length <= limiteBotones) {
          crearBotones(); // Volver a crear los botones actualizados
        } else {
          alert('Se ha alcanzado el límite de botones.');
        }
      }
    });

    contenedor.appendChild(boton);
  }
};

// Inicializar la creación de botones
crearBotones();
