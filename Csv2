// ...

const renderizarBotones = () => {
  const contenedorBotones = document.getElementById('paginacion');

  // Limpiar los botones existentes
  contenedorBotones.innerHTML = '';

  const paginasMostradas = 3;
  let inicio = Math.max(1, paginaActual - 1);
  const fin = Math.min(totalPaginas, inicio + paginasMostradas - 1);

  if (paginaActual > totalPaginas - paginasMostradas + 1) {
    inicio = Math.max(1, totalPaginas - paginasMostradas + 1);
  }

  for (let i = inicio; i <= fin; i++) {
    const boton = document.createElement('button');
    boton.innerText = i;
    boton.addEventListener('click', () => {
      paginaActual = i;
      mostrarRegistros();
      renderizarBotones();
    });
    contenedorBotones.appendChild(boton);
  }
};

