const registrosPorPagina = 10; // Número de registros a mostrar por página
const registros = []; // Tu lista de registros (deberías agregar los registros aquí)

// Calcular el número total de páginas
const totalPaginas = Math.ceil(registros.length / registrosPorPagina);

// Función para mostrar los registros en una página específica
const mostrarRegistros = (pagina) => {
  const inicio = (pagina - 1) * registrosPorPagina;
  const fin = inicio + registrosPorPagina;
  const registrosMostrados = registros.slice(inicio, fin);

  // Aquí deberías hacer algo con los registrosMostrados (por ejemplo, renderizarlos en tu interfaz)
  console.log(registrosMostrados);
};

// Función para renderizar los botones de paginación
const renderizarBotones = (paginaActual) => {
  const contenedorBotones = document.getElementById('paginacion'); // ID del contenedor de botones

  // Limpiar los botones existentes
  contenedorBotones.innerHTML = '';

  // Calcular los botones a mostrar
  const inicio = Math.max(1, paginaActual - 1);
  const fin = Math.min(totalPaginas, inicio + 2);

  // Crear y agregar botones al contenedor
  for (let i = inicio; i <= fin; i++) {
    const boton = document.createElement('button');
    boton.innerText = i;
    boton.addEventListener('click', () => mostrarRegistros(i));
    contenedorBotones.appendChild(boton);
  }
};

// Inicializar mostrando la primera página
mostrarRegistros(1);
renderizarBotones(1);
